! all keys with
! xmodmap -pke

! clear Mod1
! clear Mod2
! keycode 63 = Mode_switch
! keycode 63 = Meta_L
! add Mod1 = Meta_L
! add Mod2 = Mode_switch

! remove capslock key {{{
keycode 66 = Control_L
clear Lock
add Control = Control_L
!}}}

! left handed mouse {{{
pointer = 3 2 1
! }}}

! tilde {{{
keycode 211 = grave asciitilde
! }}}

! hyper , super  {{{
! ctrl to hyper
keycode 37 = Hyper_L
! windows to super
keycode 115 = Super_L
! }}}

! audio keys {{{
! insert to audio-mute
keycode 106 = XF86AudioMute
! home to audio-raise
keycode 97  = XF86AudioRaiseVolume
! page-up (keysym is prior) to audio-lower
keycode 99  = XF86AudioLowerVolume
! }}}

! for finnish
! alt_r
keycode 113 = Mode_switch
! alt_r + 's' , dvorak
keycode  47 = s S odiaeresis Odiaeresis
! alt_r + '-' , dvorak
keycode  48 = minus underscore adiaeresis Adiaeresis


