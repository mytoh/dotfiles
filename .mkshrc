xsource() { # {{{
  # from grml zshrc
  # Check if we can read given files and source those we can.
  if (( $# < 1 )) ; then
    printf 'usage: xsource FILE(s)...\n' >&2
    return 1
  fi

  while (( $# > 0 )) ; do
    [[ -r "$1" ]] && source "$1" > /dev/null 2>&1 ;
    shift
  done
  return 0
} #}}}



export MKSH_THEME='gauche'
mksh_plugins="gauche panna pikkukivi fasd"
source ~/.mksh.d/oh-my-mksh.mksh

# variables
blue="[38;5;004m"
normal_color="[38;5;8m"
green="[38;5;6m"
reset_color="[0m"



# key bindings
bind '^P'=search-history-up
bind '^U'=kill-line

# misc {{{

# os {{{
case $(uname) in
  FreeBSD)
    xsource ~/.mksh.d/freebsd.mksh
    ;;
  Darwin)
    xsource  ~/.mksh.d/mac.mksh
    ;;

esac
