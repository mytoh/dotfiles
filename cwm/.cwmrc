
# border
borderwidth 2

# colours
## window colour
color activeborder   '#93e6ab'
color inactiveborder '#456472'
## font colour
color font           '#c0c5ce'
## menu colour
color menubg         '#1d2a30'
color menufg         '#c0c5ce'
## group colour
color groupborder    '#a66363'
color ungroupborder  '#a6a663'
## urgency colour
color urgencyborder  '#ef9a89'

# gap top bottom left right
gap 12 0 0 0

# menu
# Any entry here is shown in the application menu
command conkeror conkeror
command emacs    emacs
command xterm   xterm
command urxvt   urxvt
command mlterm   mlterm
command rofi     "rofi -show run -font 'k10 10' -fg '#505050' -bg '#000000' -hlfg '#ffb964' -hlbg '#000000'"
command term  mlterm
command pcmanfm  pcmanfm


# Ignore programs by that name by not drawing borders around them.
ignore XMMS
ignore xwi
ignore xapm
ignore xclock
ignore conky
ignore dzen2
ignore dmenu
ignore rofi


# group

## assign group# to new windows automatically
sticky yes

## 1
autogroup 1 "mlterm,mlterm"
autogroup 1 "urxvt,URxvt"
autogroup 1 st-256color
autogroup 1 st
## 2
autogroup 2 Conkeror
autogroup 2 Corebird
autogroup 2 Midori
autogroup 2 Vimb
autogroup 2 Firefox
## 3
autogroup 3 Emacs
## 4
autogroup 4 mpv
## 5
autogroup 5 Pqiv
autogroup 5 feh
autogroup 5 Sxiv
autogroup 5 Pcmanfm

# keys

## reset some bindings
bind CM-n unmap
bind CM-p unmap
bind CM-Return unmap
bind CM-Delete unmap
#bind C-/ unmap
bind CM-n unmap
bind CM-x unmap
bind CM-1 unmap
bind CM-2 unmap
bind CM-3 unmap
bind CM-4 unmap
bind CM-5 unmap
bind CM-6 unmap
bind CM-7 unmap
bind CM-8 unmap
bind CM-9 unmap
bind CM-0 unmap
bind CM-g unmap
bind CMS-f unmap
bind CM-s unmap
bind CM-f unmap
bind CM-m unmap
#bind CM-= unmap
#bind CMS-= unmap
bind CM-w unmap
bind CMS-r unmap
bind CMS-q unmap
#bind CM-M1 unmap
#bind CMS-M3 unmap
bind CM-h unmap
bind CM-j unmap
bind CM-k unmap
bind CM-l unmap
bind CMS-h unmap
bind CMS-j unmap
bind CMS-k unmap
bind CMS-l unmap

bind C-Up unmap
bind C-Down unmap
bind C-Left unmap
bind C-Right unmap
bind CS-Up unmap
bind CS-Down unmap
bind CS-Left unmap
bind CS-Right unmap

## groups
bind 4-0 nogroup
bind 4-1 grouponly1
bind 4-2 grouponly2
bind 4-3 grouponly3
bind 4-4 grouponly4
bind 4-5 grouponly5
bind 4-6 grouponly6
bind 4-7 grouponly7
bind 4-8 grouponly8
bind 4-9 grouponly9

bind 4S-1 movetogroup1
bind 4S-2 movetogroup2
bind 4S-3 movetogroup3
bind 4S-4 movetogroup4
bind 4S-5 movetogroup5
bind 4S-6 movetogroup6
bind 4S-7 movetogroup7
bind 4S-8 movetogroup8
bind 4S-9 movetogroup9

## windows
bind 4S-c  delete
bind 4-f   maximize
bind 4-Tab cycle

##     restart             Restart the running cwm(1).
bind 4-q restart
##     quit                Quit cwm(1).
bind 4S-q quit
##     htile               Current window is placed at the top of the screen and maximized horizontally, other windows in its group share remaining screen space.
bind 4-t htile
#     vtile               Current window is placed on the left of the screen and maximized vertically, other windows in its group share remaining screen space.
bind 4S-t vtile

# launcher
bind 4-p "rofi -show run -font 'k10 10' -fg '#505050' -bg '#000000' -hlfg '#ffb964' -hlbg '#000000'"

## mouse
mousebind 4-1 window_move
mousebind 4-3 window_resize


