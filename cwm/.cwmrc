
# border
borderwidth 2

# colours
## window colour
color activeborder   '#93e6ab'
color inactiveborder '#456472'
## font colour
color font           '#c0c5ce'
## menu colour
color menubg         '#1d2a30'
color menufg         '#c0c5ce'
## group colour
color groupborder    '#a66363'
color ungroupborder  '#a6a663'
## urgency colour
color urgencyborder  '#ef9a89'

# gap top bottom left right
gap 12 0 0 0

# menu
# Any entry here is shown in the application menu
command conkeror conkeror
command emacs    emacs
command xterm   xterm
command urxvt   urxvt
command mlterm   mlterm
command st   "st -c st"
command rofi     "rofi -show run -font 'k10 10' -fg '#505050' -bg '#000000' -hlfg '#ffb964' -hlbg '#000000'"
command term  mlterm
command pcmanfm  pcmanfm
command firefox  firefox
command mcomix  mcomix 


# Ignore programs by that name by not drawing borders around them.
ignore XMMS
ignore xwi
ignore xapm
ignore xclock
ignore conky
ignore dzen2
ignore dmenu
ignore rofi
ignore tabbed


# group

## assign group# to new windows automatically
sticky yes

## 1
autogroup 1 "mlterm,mlterm"
autogroup 1 "urxvt,URxvt"
autogroup 1 st-256color
autogroup 1 st
autogroup 1 "xterm,XTerm"
## 2
autogroup 2 Conkeror
autogroup 2 Corebird
autogroup 2 Midori
autogroup 2 Vimb
autogroup 2 Firefox
autogroup 2 "xwidget-emacs,Emacs"
autogroup 2 Surf
autogroup 2 "surf,tabbed"
autogroup 2 "tabbed-surf,tabbed"

## 3
autogroup 3 Emacs
## 4
autogroup 4 mpv
## 5
autogroup 5 Pqiv
autogroup 5 feh
autogroup 5 Sxiv
autogroup 5 Pcmanfm
autogroup 5 MComix

