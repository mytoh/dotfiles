unbind-key M-Return 
unbind-key CM-n 
unbind-key CM-p 
unbind-key CM-Return 
unbind-key CM-Delete 
#bind C-/ unmap
unbind-key CM-n 
unbind-key CM-x 
unbind-key CM-1 
unbind-key CM-2 
unbind-key CM-3 
unbind-key CM-4 
unbind-key CM-5 
unbind-key CM-6 
unbind-key CM-7 
unbind-key CM-8 
unbind-key CM-9 
unbind-key CM-0 
unbind-key CM-g 
unbind-key CMS-f 
unbind-key CM-s 
unbind-key CM-f 
unbind-key CM-m 
#bind CM-= unmap
#bind CMS-= unmap
unbind-key CM-w 
unbind-key CMS-r 
unbind-key CMS-q 
#bind CM-M1 unmap
#bind CMS-M3 unmap
unbind-key CM-h 
unbind-key CM-j 
unbind-key CM-k 
unbind-key CM-l 
unbind-key CMS-h 
unbind-key CMS-j 
unbind-key CMS-k 
unbind-key CMS-l 

unbind-key C-Up 
unbind-key C-Down 
unbind-key C-Left 
unbind-key C-Right 
unbind-key CS-Up 
unbind-key CS-Down 
unbind-key CS-Left 
unbind-key CS-Right 

## groups
#bind 4-0 nogroup
bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9

bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9

## windows
bind-key 4S-c  window-delete
bind-key 4-f   window-maximize
bind-key 4S-f   window-fullscreen
bind-key 4-Tab window-cycle

##     restart             Restart the running cwm(1).
bind-key 4-q restart
##     quit                Quit cwm(1).
bind-key 4S-q quit
##     htile               Current window is placed at the top of the screen and maximized horizontally, other windows in its group share remaining screen space.
bind-key 4-t window-htile
#     vtile               Current window is placed on the left of the screen and maximized vertically, other windows in its group share remaining screen space.
bind-key 4S-t window-vtile

# launcher
bind-key 4-p "rofi -show run -font 'k10 10' -fg '#505050' -bg '#000000' -hlfg '#ffb964' -hlbg '#000000'"

## mouse
bind-mouse 4-1 window-move
bind-mouse 4-3 window-resize


