
TitleFont       "-*-terminus-medium-r-normal---12-120-*-*-*-*-iso10646-1"
ResizeFont      "-*-terminus-medium-r-normal---12-120-*-*-*-*-iso10646-1"
MenuFont        "-*-terminus-medium-r-normal---12-120-*-*-*-*-iso10646-1"
IconFont        "-*-terminus-medium-r-normal---12-120-*-*-*-*-iso10646-1"
IconManagerFont "-*-terminus-medium-r-normal---12-120-*-*-*-*-iso10646-1"

AutoRelativeResize
BorderWidth 1
ButtonIndent 1
ConstrainedMoveTime 300
#ClientBorderWidth
DecorateTransients
FramePadding 1
IconManagerGeometry "+1200+20"
IconBorderWidth 1
NoTitleHighlight
NoGrabServer
NoSaveUnders
NoBackingStore
OpaqueMove
RandomPlacement 
RestartPreviousState
ShowIconManager
TitleButtonBorderWidth 1
TitlePadding 4
UsePPosition "on"
WarpUnmapped


IconManagerDontShow
{
    "xclock"
    "xlogo"
    "xfce4-panel"
    "panel"
    "trayer"
    "TWM Icon Manager"
    "wbar"
}

NoTitle
{
    "xclock"
    "Mplayer"
    "xlogo"
    "xfce4-panel"
    "trayer"
    "panel"
    "wbar"
    "fbpanel"
    "TWM Icon Manager"
}

AutoRaise
{
    "screen"
    "firefox"
}
Color
{
    BorderColor           "gray65"
    DefaultBackground     "gray70"
    DefaultForeground     "white"
    IconBackground        "gray15"
    IconBorderColor       "lightslategrey"
    IconForeground        "gray70"
    IconManagerBackground "gray15"
    IconManagerForeground "gray70"
    IconManagerHighlight  "gray"
    MenuBackground        "gray15"
    MenuForeground        "gray70"
    MenuBorderColor       "gray30"
    MenuTitleBackground   "gray40"
    MenuTitleForeground   "gray70"
    MenuShadowColor       "gray90"
    PointerForeground     "white"
    PointerBackground     "gray"
    TitleBackground       "gray15"
    TitleForeground       "gray70"
}

MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }
Function "winup" { f.circleup}
Function "next-window" { f.forwiconmgr f.lower }

Button1 = : root : f.menu "apps"

Button3 = : root : f.menu "defops"

Button1 = m : window|icon : f.function "move-or-lower"
Button2 = m : window|icon : f.iconify
Button3 = m : window|icon : f.function "move-or-raise"

Button1 = : title : f.function "move-or-raise"
Button2 = : title : f.raiselower

Button1 = : icon : f.function "move-or-iconify"
Button2 = : icon : f.iconify

Button1 = : iconmgr : f.iconify
Button2 = : iconmgr : f.iconify

#"Tab" = m : all : f.function "next-window"
#"Tab" = m : all : f.circledown
"Tab" = m : all : f.lower
 
LeftTitleButton ":xlogo" = f.delete
LeftTitleButton ":resize" = f.fullzoom
LeftTitleButton ":menu" = f.menu "defops"

WindowRing
{
  "Emacs"
  "URxvt"
  "screen"
  "emacs"
  "urxvt"
}

Menu "defops"
{
  "Twm" f.title
    "Iconify" f.iconify
    "Resize"  f.resize
    "Move"    f.move
    "Raise"   f.raise
    "Lower"   f.lower
    "------------"    f.nop
    "Focus"   f.focus
    "Unfocus" f.unfocus
    "Show Iconmgr"  f.showiconmgr
    "Hide Iconmgr"  f.hideiconmgr
    "------------"    f.nop
    "Kill"    f.destroy
    "Delete"  f.delete
    "------------"    f.nop
    "Restart" f.restart
    "Exit"    f.quit
}

Menu "apps"
{
  "apps" f.title
    "net"        f.menu "apps-net"
    "util"   f.menu "apps-util"
    "images"   f.menu "apps-graphic"
    "gcolor"   ! "exec gcolor2 &"
    "thunar"   ! "exec thunar &"
    "enfle"    ! "exec enfle &"
    "grsync"   ! "exec grsync &"
    "agave"    ! "exec agave &"
}

Menu "apps-net"
{
  "net"   f.title  
    "firefox"  ! "exec firefox &"
    "liferea"  ! "exec liferea &"
    "jd"       ! "exec jd &"
}

Menu "apps-util"
{
  "util"   f.title  
    "xterm"    ! "exec xterm &"
    "urxvt"    ! "exec urxvtcd &"
}

Menu "apps-graphic"
{
  "image"   f.title
    "nitrogen" ! "exec nitrogen &"
    "comix"    ! "exec comix &"
    "gimv"     ! "exec gimv &"
}

Cursors
{
    Frame   "right_ptr"
    Title   "right_ptr"
    Icon    "right_ptr"
    IconMgr "right_ptr"
    Move    "fleur"
    Resize  "fleur"
    Menu    "hand1"
    Button  "hand2"
    Wait    "clock"
    Select  "dot"
    Destroy "pirate"
}
