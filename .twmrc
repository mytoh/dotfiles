
NoGrabServer
RestartPreviousState
DecorateTransients
TitleFont "-adobe-helvetica-bold-r-normal--*-90-*-*-*-*-*-*"
ResizeFont "-adobe-helvetica-bold-r-normal--*-90-*-*-*-*-*-*"
MenuFont "-adobe-helvetica-bold-r-normal--*-90-*-*-*-*-*-*"
IconFont "-adobe-helvetica-bold-r-normal--*-90-*-*-*-*-*-*"
IconManagerFont "-adobe-helvetica-bold-r-normal--*-90-*-*-*"

UsePPosition "on"
AutoRelativeResize
WarpUnmapped

OpaqueMove
RandomPlacement 
ShowIconManager
IconManagerGeometry "+0+0"
TitlePadding 6
FramePadding 1
BorderWidth 1
IconManagerDontShow
{
    "xclock"
    "xlogo"
    "xfce4-panel"
}

Notitle
{
    "xclock"
    "xlogo"
    "xfce4-panel"
}

Color
{
    BorderColor "gray65"
    DefaultBackground "white"
    DefaultForeground "deepskyblue2"
    TitleBackground "gray15"
    TitleForeground "orange"
    MenuBackground "gray15"
    MenuForeground "orange"
    MenuBorderColor "slategrey"
    MenuTitleBackground "orange"
    MenuTitleForeground "gray20"
    IconBackground "gray15"
    IconForeground "orange"
    IconBorderColor "lightslategrey"
    IconManagerBackground "gray15"
    IconManagerForeground "orange"
}

MoveDelta 3
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }

Button1 = : root : f.menu "defops"

Button3 = : root : f.menu "Apps."

Button1 = m : window|icon : f.function "move-or-lower"
Button2 = m : window|icon : f.iconify
Button3 = m : window|icon : f.function "move-or-raise"

Button1 = : title : f.function "move-or-raise"
Button2 = : title : f.raiselower

Button1 = : icon : f.function "move-or-iconify"
Button2 = : icon : f.iconify

Button1 = : iconmgr : f.iconify
Button2 = : iconmgr : f.iconify

Button1 = : window : f.lower
"Tab" = m : all : f.move-or-lower
LeftTitleButton ":xlogo" = f.delete
LeftTitleButton ":menu" = f.fullzoom

WindowRing
{
  "Emacs"
  "URxvt"
  "screen"
  "emacs"
  "urxvt"  
}

menu "defops"
{
"Twm"	f.title
"Iconify"	f.iconify
"Resize"	f.resize
"Move"		f.move
"Raise"		f.raise
"Lower"		f.lower
""		f.nop
"Focus"		f.focus
"Unfocus"	f.unfocus
"Show Iconmgr"	f.showiconmgr
"Hide Iconmgr"	f.hideiconmgr
""		f.nop
"Xterm"		f.exec "exec xterm &"
""		f.nop
"Kill"		f.destroy
"Delete"	f.delete
""		f.nop
"Restart"	f.restart
"Exit"		f.quit
}

menu "Apps."
{
"Apps." f.title
"urxvt" f.exec "exec urxvtdc &"
"emacs" f.exec "exec emacs &"
"firefox" f.exec "exec firefox3 &"
"nitrogen" f.exec "exec nitrogen &"
}
