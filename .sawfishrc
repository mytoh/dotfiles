(require 'sawfish-defaults)
(require 'sawfish.wm.ext.pager)
(setq backtrace-on-error t)

(setq pager-executable "pager")
(add-hook 'after-initialization-hook pager t)

(setq *workspace-count* 4)

;; Application Keymacros
(define apps-keymap ( make-keymap ))
(bind-keys global-keymap "C-t" apps-keymap)

(bind-keys apps-keymap 
  "d" `(jump-or-exec "dmenu" "dmenu_run" t)) 

;; sawfish user customization -- do not edit by hand!
;; sawfish version 1.5.2, written Wed Dec 15 20:28:20 2010

(define-special-variable   pager-workspaces-per-column 1)
(define-special-variable   pager-show-ignored-windows t)
(define-special-variable   resize-show-dimensions '())
(define-special-variable   move-show-position '())
(define-special-variable   ignore-program-positions '())
(define-special-variable   place-window-mode 'top-left)
(define-special-variable   window-history-auto-save-dimensions '())
;(define-special-variable   Dust:icon-mode 'if-available) 
(define-special-variable   Dust:show-resize-triangle 't)
(define-special-variable   tooltips-enabled '())
(define-special-variable   default-window-animator 'none)
(define-special-variable   resize-outline-mode 'opaque)
(define-special-variable   move-outline-mode 'opaque)
(define-special-variable   default-frame-style 'Dust)
;(define-special-variable   default-font '("Pango" . "Inconsolata Medium 10"))
(define-special-variable   Crux:button-theme 'next)
(define-special-variable   Crux:show-window-icons t)
