alignment top_left
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
default_bar_size 50 5
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
font -*-terminus-medium-r-normal-*-12-*-*-*-*-*-iso10646-*
use_xft no
xftfont DejaVu Sans Mono:size=8
gap_x 3
gap_y 1
minimum_size 5 5
net_avg_samples 2
no_buffers no
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_colour 333333
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
${scroll 16 $nodename - $sysname $kernel on $machine} ${color grey}cpu:$color $cpu% ${cpubar} ${color grey}ram:$color $memperc% ${membar} ${color grey}processes:$color $processes  ${color grey}running:$color $running_processes ${color grey}disk: / $color${fs_used /}/${fs_size /} ${fs_bar /} ${color grey}up:$color ${upspeed em0} ${color grey}- down:$color ${downspeed em0} 
