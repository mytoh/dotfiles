reload-rc() {
source ~/.mkshrc
}

current-directory() {
        local d=${PWD:-?} p=~
        [[ $p = ?(*/) ]] || d=${d/#$p/~}
        local m=${%d} n p=...
        (( m > 0 )) || m=${#d}
	(( m > (n = (COLUMNS/3 < 7 ? 7 : COLUMNS/3)) )) && d=${d:(-n)} || \
	p=; print -nr -- "$p$d"
}



parse-git-branch() { #{{{
  if [[ -e $PWD/.git ]]; then
    gitver=$(git branch 2>/dev/null | sed -n '/^\*/s/^\* //p')
    echo -ne "${normal_color}â”€($(branch-color)${gitver}${normal_color})"
  else
    return 0
  fi
  }

  branch-color() {
    local color=""
    if git diff --quiet 2>/dev/null >&2
    then
      color="[38;5;2m"
    else
      color="[38;5;1m"
    fi
    echo -ne $color
  }
  #}}}

